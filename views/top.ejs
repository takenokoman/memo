<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/master.css">
    <link rel="stylesheet" href="/css/top.css">
  </head>
  <body>
    <header>
      <h1>MEMO</h1>
    </header>
    <main>
      <div class="btn">
        <a id="login-btn" class="login-btn" href="#">ログイン</a>
        <a class="register-btn" href="/register">新規登録</a>
      </div>
      <% if (typeof noUser !== 'undefined') { %>
        <p><%= noUser %></p>
      <% } %>
      <div id="modal" class="modal-wrap">
        <div class="modal">
          <div id="close" class="close">
            <a href="">×</a>
          </div>
          <form class="" action="/rogin" method="post">
            <div class="id-form">
              <label for="id">メールアドレス</label>
              <input id="id" type="email" name="email" value="">
            </div>
            <br>
            <div class="pass-form">
              <label for="pass">パスワード</label>
              <input id="pass" type="password" name="pass" value="">
            </div>
            <input class="submit-btn" type="submit" name="" value="ログイン">
          </form>
        </div>
      </div>
    </main>
    <%- include('partials/footer'); %>
    <script src="js/main.js"></script>
  </body>
</html>
